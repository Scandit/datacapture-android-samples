<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@android:color/white</item>
        <item name="buttonStyle">@style/DefaultButton</item>
    </style>

    <style name="DefaultButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="WhiteButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
