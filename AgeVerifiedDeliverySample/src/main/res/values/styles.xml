<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionBarStyle">@style/ThemeActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="ThemeActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
    </style>

    <style name="Scandit" />

    <style name="Scandit.TextAppearance" />

    <style name="Scandit.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="Scandit.TextAppearance.Tabs" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Scandit.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/button_background_tint</item>
        <item name="android:textAppearance">@style/Scandit.TextAppearance.Button</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    </style>

    <style name="Scandit.TextAppearance.BottomSheet" />

    <style name="Scandit.TextAppearance.BottomSheet.Title" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/nearly_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Scandit.TextAppearance.BottomSheet.BodyText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/nearly_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_shape</item>
    </style>
</resources>
