<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".MainActivity"
                  android:exported="true"
                  android:screenOrientation="fullUser"
                  android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".modes.fragment.FullscreenScanFragmentContainerActivity"
                  android:theme="@style/Theme.AppCompat.Light"
                  android:label="@string/full_screen_fragment"
                  android:parentActivityName=".MainActivity"/>

        <activity android:name=".modes.activity.FullscreenScanActivity"
                  android:theme="@style/Theme.AppCompat.Light"
                  android:label="@string/full_screen_activity"
                  android:parentActivityName=".MainActivity"/>

        <activity android:name=".modes.splitview.SplitViewScanActivity"
                  android:theme="@style/Theme.AppCompat.Light"
                  android:label="@string/split_view"
                  android:parentActivityName=".MainActivity"/>
    </application>
</manifest>