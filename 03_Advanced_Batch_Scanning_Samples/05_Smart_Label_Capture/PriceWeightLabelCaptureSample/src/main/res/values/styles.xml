<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/RoundedDialog</item>
        <item name="colorPrimary">@color/fullDark</item>
        <item name="buttonStyle">@style/DefaultButton</item>
        <item name="editTextStyle">@style/SmallerEditText</item>
        <item name="android:textViewStyle">@style/BolderTextView</item>
    </style>

    <style name="AlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/fullDark</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoundedDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
        <item name="buttonStyle">@style/DefaultButton</item>
    </style>

    <style name="RoundedBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/RoundedShape</item>
    </style>

    <style name="RoundedShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="RoundButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="GuidanceText" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_guidance</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="InfoHintText" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_hint</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableStart">@drawable/ic_info</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="DefaultButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_default_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <style name="AltButton" parent="DefaultButton">
        <item name="android:background">@drawable/bg_alt_button</item>
        <item name="android:textColor">@color/button_colors</item>
    </style>

    <style name="AltButtonOutlined" parent="AltButton">
        <item name="android:background">@drawable/bg_alt_outlined_button</item>
    </style>

    <style name="SmallerEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/fullDark</item>
    </style>

    <style name="BolderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/BolderTextAppearance</item>
    </style>

    <style name="BolderTextAppearance" parent="TextAppearance.AppCompat.Small" />

</resources>
